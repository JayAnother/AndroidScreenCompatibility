<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_main"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Relative positioning"
            style="@style/Section"
            tools:ignore="HardcodedText"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--
                layout_constraintLeft_toLeftOf
                layout_constraintLeft_toRightOf
                layout_constraintRight_toLeftOf
                layout_constraintRight_toRightOf
                layout_constraintTop_toTopOf
                layout_constraintTop_toBottomOf
                layout_constraintBottom_toTopOf
                layout_constraintBottom_toBottomOf
                layout_constraintBaseline_toBaselineOf
                layout_constraintStart_toEndOf
                layout_constraintStart_toStartOf
                layout_constraintEnd_toStartOf
                layout_constraintEnd_toEndOf
             -->
            <TextView
                android:id="@+id/tv_info_relative_positioning"
                android:text="@string/info_relative_positioning"
                android:textColor="@color/white"
                android:visibility="visible"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText"/>

            <TextView
                android:id="@+id/card_center"
                android:text="Center"
                style="@style/Card"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_top"
                tools:ignore="HardcodedText"/>

            <TextView
                android:id="@+id/card_left"
                android:text="Left"
                style="@style/Card"
                app:layout_constraintRight_toLeftOf="@+id/card_center"
                app:layout_constraintTop_toTopOf="@+id/card_center"
                app:layout_constraintBottom_toBottomOf="@+id/card_center"
                tools:ignore="HardcodedText"/>

            <TextView
                android:id="@+id/card_bottom"
                android:text="Bottom"
                style="@style/Card"
                app:layout_constraintTop_toBottomOf="@+id/card_center"
                app:layout_constraintLeft_toLeftOf="@+id/card_center"
                app:layout_constraintRight_toRightOf="@+id/card_center"
                tools:ignore="HardcodedText"/>

            <TextView
                android:id="@+id/card_right"
                android:text="Right"
                style="@style/Card"
                app:layout_constraintLeft_toRightOf="@+id/card_center"
                app:layout_constraintBaseline_toBaselineOf="@+id/card_center"
                tools:ignore="HardcodedText"/>

            <TextView
                android:id="@+id/card_top"
                android:text="Top"
                style="@style/Card"
                app:layout_constraintTop_toBottomOf="@+id/tv_info_relative_positioning"
                app:layout_constraintLeft_toLeftOf="@+id/card_center"
                app:layout_constraintRight_toRightOf="@+id/card_center"
                tools:ignore="HardcodedText"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:text="Margins"
            style="@style/Section"
            tools:ignore="HardcodedText"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--
                android:layout_marginStart
                android:layout_marginEnd
                android:layout_marginLeft
                android:layout_marginTop
                android:layout_marginRight
                android:layout_marginBottom

                layout_goneMarginStart
                layout_goneMarginEnd
                layout_goneMarginLeft
                layout_goneMarginTop
                layout_goneMarginRight
                layout_goneMarginBottom
            -->
            <TextView
                android:id="@+id/tv_info_margins"
                android:text="@string/info_margins"
                android:textColor="@color/white"
                android:paddingBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText"/>

            <TextView
                android:id="@+id/card_left_margin"
                android:text="Left"
                style="@style/Card"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@+id/tv_info_margins"
                tools:ignore="HardcodedText"/>

            <TextView
                android:id="@+id/card_right_margin"
                android:text="Right"
                style="@style/Card"
                app:layout_goneMarginStart="100dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_info_margins"
                app:layout_constraintLeft_toRightOf="@+id/card_left_margin"
                tools:ignore="HardcodedText"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:text="Centering positioning and Bias"
            style="@style/Section"
            tools:ignore="HardcodedText"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_info_centering_positioning"
                android:text="@string/info_centering_positioning"
                android:textColor="@color/white"
                android:paddingBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_center"
                app:layout_constraintTop_toBottomOf="@+id/tv_info_centering_positioning"
                android:layout_width="match_parent"
                android:background="@color/black"
                android:layout_height="200dp">
                <!--
                     layout_constraintLeft_toLeftOf="parent"
                     layout_constraintRight_toRightOf="parent"
                     layout_constraintTop_toTopOf="parent"
                     layout_constraintBottom_toBottomOf="parent"
                 -->
                <TextView
                    android:id="@+id/card_center_horizontal"
                    android:text="H"
                    style="@style/Card"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:ignore="HardcodedText"/>

                <TextView
                    android:id="@+id/card_center_vertical"
                    android:text="V"
                    style="@style/Card"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:ignore="HardcodedText"/>

                <TextView
                    android:id="@+id/card_center_vertical_horizontal"
                    android:text="V &amp; H"
                    style="@style/Card"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:ignore="HardcodedText"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_info_bias"
                android:text="@string/info_bias"
                android:textColor="@color/white"
                android:paddingBottom="10dp"
                app:layout_constraintTop_toBottomOf="@+id/cl_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                app:layout_constraintTop_toBottomOf="@+id/tv_info_bias"
                android:background="@color/black"
                android:layout_width="match_parent"
                android:layout_height="200dp">
                <!--
                    layout_constraintHorizontal_bias
                    layout_constraintVertical_bias
                -->
                <TextView
                    android:id="@+id/card_bias_horizontal"
                    android:text="H"
                    style="@style/Card"
                    app:layout_constraintHorizontal_bias="0.3"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:ignore="HardcodedText"/>

                <TextView
                    android:id="@+id/card_bias_vertical"
                    android:text="V"
                    style="@style/Card"
                    app:layout_constraintTop_toBottomOf="@+id/card_bias_horizontal"
                    app:layout_constraintVertical_bias="0.3"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:ignore="HardcodedText"/>

                <TextView
                    android:id="@+id/card_bias_vertical_horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/card_bias_vertical"
                    android:text="V &amp; H"
                    style="@style/Card"
                    app:layout_constraintHorizontal_bias="0.7"
                    app:layout_constraintVertical_bias="0.7"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:ignore="HardcodedText"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:text="Circular positioning"
            style="@style/Section"
            tools:ignore="HardcodedText"/>
        <!--
            layout_constraintCircle : references another widget id
            layout_constraintCircleRadius : the distance to the other widget center
            layout_constraintCircleAngle : which angle the widget should be at (in degrees, from 0 to 360)
        -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_info_circular_positioning"
                android:text="@string/info_circular_positioning"
                android:textColor="@color/white"
                android:paddingBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:background="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/tv_info_circular_positioning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/card_circular_position"
                    android:text="Center"
                    style="@style/Card"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:ignore="HardcodedText"/>
                <TextView
                    android:text="45°"
                    style="@style/Card"
                    app:layout_constraintCircle="@+id/card_circular_position"
                    app:layout_constraintCircleRadius="100dp"
                    app:layout_constraintCircleAngle="45"
                    tools:ignore="HardcodedText"/>

                <TextView
                    android:text="90°"
                    style="@style/Card"
                    app:layout_constraintCircle="@+id/card_circular_position"
                    app:layout_constraintCircleRadius="100dp"
                    app:layout_constraintCircleAngle="90"
                    tools:ignore="HardcodedText"/>

                <TextView
                    android:text="135°"
                    style="@style/Card"
                    app:layout_constraintCircle="@+id/card_circular_position"
                    app:layout_constraintCircleRadius="100dp"
                    app:layout_constraintCircleAngle="135"
                    tools:ignore="HardcodedText"/>

                <TextView
                    android:text="180°"
                    style="@style/Card"
                    app:layout_constraintCircle="@+id/card_circular_position"
                    app:layout_constraintCircleRadius="100dp"
                    app:layout_constraintCircleAngle="180"
                    tools:ignore="HardcodedText"/>
                <TextView
                    android:text="225°"
                    style="@style/Card"
                    app:layout_constraintCircle="@+id/card_circular_position"
                    app:layout_constraintCircleRadius="100dp"
                    app:layout_constraintCircleAngle="225"
                    tools:ignore="HardcodedText"/>
                <TextView
                    android:text="270°"
                    style="@style/Card"
                    app:layout_constraintCircle="@+id/card_circular_position"
                    app:layout_constraintCircleRadius="100dp"
                    app:layout_constraintCircleAngle="270"
                    tools:ignore="HardcodedText"/>
                <TextView
                    android:text="315°"
                    style="@style/Card"
                    app:layout_constraintCircle="@+id/card_circular_position"
                    app:layout_constraintCircleRadius="100dp"
                    app:layout_constraintCircleAngle="315"
                    tools:ignore="HardcodedText"/>
                <TextView
                    android:text="360°"
                    style="@style/Card"
                    app:layout_constraintCircle="@+id/card_circular_position"
                    app:layout_constraintCircleRadius="100dp"
                    app:layout_constraintCircleAngle="360"
                    tools:ignore="HardcodedText"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:text="Visibility behavior"
            style="@style/Section"
            tools:ignore="HardcodedText"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_info_visibility_behavior"
                android:text="@string/info_visibility_behavior"
                android:textColor="@color/white"
                android:paddingBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText"/>
            <TextView
                android:id="@+id/card_left_visibility_behavior"
                android:text="Left"
                style="@style/Card"
                android:visibility="gone"
                android:layout_marginStart="100dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_info_visibility_behavior"
                tools:ignore="HardcodedText"/>

            <TextView
                android:id="@+id/card_right_visibility_behavior"
                android:text="Right"
                style="@style/Card"
                app:layout_goneMarginStart="100dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_info_visibility_behavior"
                app:layout_constraintLeft_toRightOf="@+id/card_left_visibility_behavior"
                tools:ignore="HardcodedText"/>
            <RelativeLayout
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/card_right_visibility_behavior"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/card_left_visibility_behavior_rl"
                    android:text="Left"
                    style="@style/Card"
                    android:layout_marginStart="100dp"
                    android:visibility="gone"
                    tools:ignore="HardcodedText"/>

                <TextView
                    android:id="@+id/card_right_visibility_behavior_rl"
                    android:text="Right"
                    style="@style/Card"
                    android:layout_toEndOf="@+id/card_left_visibility_behavior_rl"
                    app:layout_constraintLeft_toRightOf="@+id/card_left_visibility_behavior_rl"
                    tools:ignore="HardcodedText" tools:layout_editor_absoluteY="43dp"
                    android:layout_marginLeft="16dp"/>
            </RelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:text="Dimension constraints"
            style="@style/Section"
            tools:ignore="HardcodedText"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:text="Chains"
            style="@style/Section"
            tools:ignore="HardcodedText"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:text="Virtual Helpers objects"
            style="@style/Section"
            tools:ignore="HardcodedText"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:text="Optimizer"
            style="@style/Section"
            tools:ignore="HardcodedText"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
