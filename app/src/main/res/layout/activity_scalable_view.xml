<?xml version="1.0" encoding="utf-8"?>
<com.jay.androidscreencompatibility.ui.adaptation_view.utils.ScalableRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".ui.adaptation_dp.DPAdaptActivity">

    <ImageView
        android:id="@+id/iv_logo"
        android:src="@drawable/ic_logo"
        android:layout_alignParentTop="true"
        android:layout_marginTop="36dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/id_login_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/iv_logo"
        android:layout_centerHorizontal="true"
        android:textSize="18.2sp"
        android:textColor="#ffffff"
        android:lineSpacingExtra="1.2sp"
        android:gravity="center_horizontal"
        android:text="LOGIN TO YOUR ACCOUNT"
        tools:ignore="HardcodedText"/>

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_login_label"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@drawable/bg_stroke_white"
        android:drawableStart="@drawable/ic_email_pwd"
        android:drawablePadding="10dp"
        android:textSize="17sp"
        android:textColor="#ffffff"
        android:lineSpacingExtra="2.3sp"
        tools:ignore="HardcodedText"
        android:text="youremail@mail.com"/>

    <TextView
        android:id="@+id/tv_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@drawable/bg_stroke_white"
        android:drawableStart="@drawable/ic_email_pwd"
        android:drawablePadding="10dp"
        android:textSize="17sp"
        android:textColor="#ffffff"
        android:lineSpacingExtra="2.3sp"
        tools:ignore="HardcodedText"
        android:text="password"/>

    <TextView
        android:id="@+id/tv_forgot_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_pwd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:textSize="17sp"
        android:textColor="#ffffff"
        android:lineSpacingExtra="2.3sp"
        android:gravity="center_horizontal"
        tools:ignore="HardcodedText"
        android:text="Forgot Password?"/>

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_forgot_pwd"
        android:layout_centerHorizontal="true"
        android:background="#f1f1f1"
        android:textSize="17sp"
        android:textColor="#54575e"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginStart="67dp"
        android:layout_marginEnd="67dp"
        android:lineSpacingExtra="2.3sp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:gravity="center"
        tools:ignore="HardcodedText"
        android:text="LOGIN"/>

    <TextView
        android:id="@+id/tv_fb_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_login"
        android:layout_centerHorizontal="true"
        android:background="#7c7e86"
        android:textSize="17sp"
        android:textColor="#ffffff"
        android:layout_marginTop="20dp"
        android:layout_marginStart="67dp"
        android:layout_marginEnd="67dp"
        android:lineSpacingExtra="2.3sp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:gravity="center"
        tools:ignore="HardcodedText"
        android:text="Login With Facebook"/>

    <TextView
        android:id="@+id/tv_create_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_fb_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:textSize="17sp"
        android:textColor="#ffffff"
        android:lineSpacingExtra="2.3sp"
        android:gravity="center_horizontal"
        android:text="Create Account"
        tools:ignore="HardcodedText"/>

</com.jay.androidscreencompatibility.ui.adaptation_view.utils.ScalableRelativeLayout>